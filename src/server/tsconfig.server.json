{  
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "test.ts",
    "**/*.spec.ts",
    "../client/**"
  ]
}
